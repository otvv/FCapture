{
  "name": "fcapture",
  "version": "0.0.6",
  "description": "a previewer/recorder eventually) software for generic USB capture cards",
  "main": "app/electron.mjs",
  "build": {
    "productName": "FCapture",
    "icon": "app/assets/icons/fcapture-icon-fallback.png",
    "mac": {
      "icon": "app/assets/icons/fcapture-icon-mac.icns",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "icon": "app/assets/icons/fcapture-icon-windows.ico"
    },
    "linux": {
      "icon": "app/assets/icons/fcapture-icon-linux.png"
    }
  },
  "scripts": {
    "start": "npx electron .",
    "test": "ELECTRON_ENV=development npx electron .",
    "build": "sudo sh build/build.sh",
    "buildAlt": "electron-builder",
    "signMac": "codesign --deep --force --sign - dist/mac/*.app"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otvv/fcapture.git"
  },
  "keywords": [
    "usb",
    "capture",
    "card",
    "preview",
    "software",
    "electron"
  ],
  "type": "module",
  "author": "otvv",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/otvv/fcapture/issues"
  },
  "homepage": "https://github.com/otvv/fcapture#readme",
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5"
  }
}
